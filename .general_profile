  export CLICOLOR=1 # Enable colour support
  export LSCOLORS="dxfxcxexbxegedabagacad"
else
  LS_COLORS="di=33:ln=35:so=32:pi=34:ex=31:bd=34;46:cd=34;43:su=30;41:sg=30;46:"
  LS_COLORS+="tw=30;42:ow=30;43:"
  export IS_DARK=true
fi
